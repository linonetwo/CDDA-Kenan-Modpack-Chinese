    "id": "92_ego_evolve",
    "effect": [
      { "u_consume_item": "skin_prophecy_evo_page", "count": 1 },
      {
        "if": {
          "and": [
            { "math": [ "u_spell_level('EGO_92_stage_1')", "<", "10" ] },
            { "math": [ "u_spell_level('EGO_92_stage_2')", "==", "-1" ] },
